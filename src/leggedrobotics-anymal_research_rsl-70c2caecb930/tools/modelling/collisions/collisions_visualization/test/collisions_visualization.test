<?xml version="1.0" encoding="utf-8"?>

<launch>

  <!-- Enable/disable Rviz -->
  <arg name="rviz" default="true"/>

  <group if="$(arg rviz)">
    <node pkg="rviz" type="rviz" output="screen" name="rviz" args="-d $(find collisions_visualization)/test/config/visual_test.rviz" />
    <node pkg="tf" type="static_transform_publisher" name="world1" args="0 0 0 0 0 0  world world1  100"/>
    <node pkg="tf" type="static_transform_publisher" name="world2" args="5 0 0 0 0 0  world world2  100"/>
    <node pkg="tf" type="static_transform_publisher" name="world3" args="0 5 0 0 0 0  world world3  100"/>
  </group>

  <!-- Launch test -->
  <test pkg="collisions_visualization" test-name="collisions_visualization" type="collisions_visualization-test" time-limit="1000.0"/>
</launch>
