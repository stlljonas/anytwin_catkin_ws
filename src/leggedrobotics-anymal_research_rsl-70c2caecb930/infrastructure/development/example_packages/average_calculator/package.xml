  <!-- <build_depend>eigen</build_depend> -->
  <!-- <build_depend>libgstreamer1.0-dev</build_depend> -->

  <!-- System dependencies required for building only, appearing in header files only -->
  <!-- Note: build_depend does not imply build_export_depend. -->
  <!-- Examples: message_runtime, eigen, *-dev packages, header only packages -->
  <!-- <build_export_depend>message_runtime</build_export_depend> -->
  <!-- <build_export_depend>eigen</build_export_depend> -->
